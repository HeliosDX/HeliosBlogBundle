{# src/Helios/BlogBundle/Resources/views/Blog/modifier.html.twig #}

{% extends "HeliosBlogBundle::layout.html.twig" %}

{% block title %}
  Modifier un article - {{ parent() }}
{% endblock %}

{% block heliosblog_body %}

  <h2>Modifier un article</h2>

  {% include "HeliosBlogBundle:Blog:formulaire.html.twig" %}

  <p>
    Vous éditez un article déjà existant,
    ne le changez pas trop pour éviter
    aux membres de ne pas comprendre
    ce qu'il se passe.
  </p>

  <p>
    <a href="{{ path('heliosblog_voir', {'slug': article.slug}) }}" class="btn">
      <i class="icon-chevron-left"></i>
      Retour à l'article
    </a>
  </p>

{% endblock %}