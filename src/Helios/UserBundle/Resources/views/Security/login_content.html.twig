{# S'il y a une erreur, on l'affiche dans un joli cadre #}
{% if error %}
  <div class="alert alert-error">{{ error }}</div>
{% endif %}

<div class="well sidebar-nav padding5 padding-left10">
    <ul class="nav nav-list">
        <li class="nav-header">Identification</li>
    </ul>
    {# Le formulaire est exactement le même que dans "login", seul la présentation diffère un peu,
       On ne met pas de label aux champs, mais des placeholders #}
    <form action="{{ path("fos_user_security_check") }}" method="post">
      <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
      <ul class="nav nav-pills nav-stacked">
        <li><input type="text" class="input-medium" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}" /></li>
        <li><input type="password" class="input-medium" id="password" name="_password" required="required" placeholder="{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}" /></li>
        <li>
          <label for="remember_me" class="checkbox">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
          </label>
        </li>
      </ul>

      <button type="submit" id="_submit" name="_submit" class="btn">{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}</button>
    </form>
</div>